{{#each erros}}
  <div class="alert alert-danger"> {{texto}} </div>
{{else}}
  
{{/each}}

<h1>Página de Categorias </h1>

<a href='/admin/categorias/add'> 
    <button class="btn btn-success">Criar nova Categoria</button>
</a>

{{#each categorias}}
    <div class= "card mt-4">
        <div class= "card-body">
            <h4> {{dataValues.nome}} </h4>
            <small>Slug:  {{dataValues.slug}}</small> <br>
            <small>Data de criação:  {{dataValues.date}}</small> <br> <br>
            <a href ='/admin/categorias/altCategoria/{{dataValues.id}}'> 
                <button class='btn btn-success mt-3'> alterar </button> </a>
            <a href ='/admin/categorias/excCategoria/{{dataValues.id}}'> 
                <button class='btn btn-danger mt-3'> deletar </button> </a>
        </div>
    </div>

{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada !</h4>
{{/each}}