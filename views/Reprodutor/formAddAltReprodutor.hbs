{{#each erros}}
  <div class="alert alert-danger"> {{texto}} </div>
{{else}} 
{{/each}}

<h3>Reprodutor</h3>
<div class="card">
  <div class="card-body">
    
    <form action="/Reprodutor/addAltReprodutor" method='POST'>
    
      {{#if Reprodutor}}
        <label for='brinco'> Brinco: </label>
          <input readonly type='text' id='brinco' name='brinco' value= '{{Reprodutor.brinco}}' class='form-control'>
      {{else}}
        <label for='brinco'> Brinco: </label>
          <input type='text' id='brinco' name='brinco' value= '{{Reprodutor.brinco}}' maxlength="7" title="Campo não pode ser vazio nem maior que 7 caracteres." class='form-control'>
      {{/if}}

      <label for='multiplicadora'> Multiplicadora: </label>
        <input type='text' id='multiplicadora' name='multiplicadora' value= '{{Reprodutor.multiplicadora}}' maxlength="40" title="Campo não pode ser maior que 40 caracteres." class='form-control'> 
      
      <label for='genetica'> Genética: </label>
        <input type='text' id='genetica' name='genetica' value= '{{Reprodutor.genetica}}' maxlength="20" title="Campo não pode ser maior que 20 caracteres." class='form-control'>      
      
      <label for='data_nasc'> Data de Nascimento: </label>
        <input type='date' id='data_nasc' name='data_nasc' value= '{{Reprodutor.data_nasc}}' class='form-control'> 
      
      <label for='peso_nasc'> Peso ao Nascer: </label>
        <input type='number' id='peso_nasc' name='peso_nasc' value= '{{Reprodutor.peso_nasc}}'  min=0 max=999.999 step=0.001 title="Utilize '.' para decimal. Valores permitidos entre 0 e 999.999" class='form-control'> 
      
      <label for='data_chegada'> Data de Chegada: </label>
        <input type='date' id='data_chegada' name='data_chegada' value= '{{Reprodutor.data_chegada}}' class='form-control'> 
      
      <label for='peso_chegada'> Peso na chegada: </label>
        <input type='number' id='peso_chegada' name='peso_chegada' value= '{{Reprodutor.peso_chegada}}' min=0 max=999.999 step=0.001 title="Utilize '.' para decimal. Valores permitidos entre 0 e 999.999" class='form-control'> 
      
      <label for='sexo'> Sexo: </label>
        <input type='text' id='sexo' name='sexo' value= '{{Reprodutor.sexo}}' maxlength=1 pattern="[FfMm]{1}" title="Digite: F ou f para fêmea. M ou m para macho" class='form-control'> 
                    
      <br>
      <button type='submit' class='btn btn-success'>Salvar Reprodutor</button>
      <button type='reset' class='btn btn-success'>Limpar Dados</button>
    </form>
  </div>  
</div>